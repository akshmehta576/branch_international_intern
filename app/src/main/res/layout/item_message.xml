<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_view"
        android:padding="10dp"
        android:background = "@drawable/rounded_search_box"
        android:layout_margin="10dp">
    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:text="Id : 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_id"/>

        <TextView
            android:id="@+id/message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_id"
            android:paddingVertical="4dp"
            android:text="Hi how are you? hope you are doing well."
            android:textColor="#464646"
            android:textSize="@dimen/textsize" />
    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/textsize"
        android:fontFamily="monospace"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:text="Time: 14-10-2001"
        android:layout_toEndOf="@+id/message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messgae_time"/></RelativeLayout>


